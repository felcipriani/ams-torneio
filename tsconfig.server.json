{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "target": "es2020",
    "lib": ["es2020"]
  },
  "include": [
    "server.ts",
    "server/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "app/**/*",
    "components/**/*",
    "hooks/**/*"
  ]
}
